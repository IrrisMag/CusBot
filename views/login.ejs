<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %> 
<body>
  <main class="container mt-5">
    <div class="d-flex justify-content-center mb-4">
      <div class="card text-white bg-success w-100" style="max-width: 400px;">
        <div class="card-body text-center">
          <i class="fas fa-coins fa-3x mb-3"></i>
          <h1 class="card-title">CusBot</h1>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <form action="/auth/login" method="post" class="w-100" style="max-width: 400px;">
        <div class="card p-4 shadow-sm">
          <h2 class="mb-3 text-center">Enter Your Account</h2>
          <%- include('partials/formErrors') %> 
          
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-envelope"></i>
              </span>
              <input name="email" type="email" class="form-control" placeholder="Email" value="<%= user?.email || '' %>" required>
            </div>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-key"></i>
              </span>
              <input name="password" type="password" class="form-control" placeholder="Password" required>
            </div>
          </div>

          <button type="submit" class="btn btn-primary w-100">
            Log in
            <i class="fas fa-arrow-right ms-2"></i>
          </button>
        </div>
      </form>
    </div>

    <div class="text-center mt-3">
      <span>
        Don't have an account? <a href="/auth/signup" class="text-primary">Sign Up</a>
      </span>
    </div>
  </main>

 
  <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
</body>
</html>
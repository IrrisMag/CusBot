<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body class="bg-gray-100">

  <!-- Header -->
  <div class="flex justify-between items-center bg-blue-500 text-white p-4">
    <h1 class="text-3xl">Web Store</h1>
    <a href="#" class="bg-blue-700 px-4 py-2 rounded">Cart</a>
  </div>

  <!-- Product Grid -->
  <div class="p-6">
    <% if (products && products.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% products.forEach(product => { %>
          <div class="rounded-lg bg-white shadow-md overflow-hidden">
            <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
            <div class="p-4">
              <h3 class="text-xl font-semibold"><%= product.name %></h3>
              <p class="text-gray-600"><%= product.description %></p>
              <p class="text-xl font-bold text-blue-500">$<%= product.price %></p>
              <a href="#" class="bg-blue-500 text-white py-2 px-4 rounded mt-4 inline-block">Add to Cart</a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center">
        <p class="text-xl text-gray-600">No products available at the moment. Please check back later.</p>
      </div>
    <% } %>
  </div>

  <button onclick="window.location.href='/bot'" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
    Open Chat Support
</button>


